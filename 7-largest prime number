// 7.	Write a program to find the largest prime factor of a given number N. Analyze its time complexity
#include <stdio.h>

int main() {
    int n, i;
    
    printf("Enter a number: ");
    scanf("%d", &n);

    int largest = -1;

    // Check for every number from 2 to n
    for (i = 2; i <= n; i++) {
        // Check if i is a factor of n
        while (n % i == 0) {
            largest = i; // Store the factor
            n = n / i;    // Reduce n
        }
    }

    printf("Largest prime factor: %d\n", largest);

    return 0;
}



// Time Complexity: O(N) (in worst case)
